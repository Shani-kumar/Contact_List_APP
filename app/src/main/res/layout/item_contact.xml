<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F2B880"
    android:layout_margin="12dp">
    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/deletebutton"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="shaniajkdsfhasjkdhfasjskdjdfsdfsadfasdfasdfsdhf"
        android:padding="12sp"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="this is contact"
        android:id="@+id/text_contact"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:padding="12sp"
        android:textSize="16sp"
        />
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editbutton"
        app:layout_constraintTop_toTopOf="@+id/text_contact"
        app:layout_constraintTop_toBottomOf="@+id/text_contact"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="16dp"
        android:src="@drawable/baseline_edit_note_24"/>
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deletebutton"
        app:layout_constraintTop_toTopOf="@+id/text"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="16dp"
        android:src="@drawable/baseline_delete_forever_24"/>



</androidx.constraintlayout.widget.ConstraintLayout>